        <data android:scheme="https" android:host="www.taxiconnectna.com" />
        <data android:scheme="taxiconnect" android:host="sharedTrip" />
      </intent-filter>
    </activity>
    <activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />
  </application>

</manifest>
